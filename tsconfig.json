{
  "compilerOptions": {
    // "allowJs": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": ["ES6", "DOM"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./dist/",
    "resolveJsonModule": true,
    "sourceMap": true,
    "target": "es6",
  },
  "exclude": [
    "node_modules",
    // "dist"
  ],
  "include": [
    "server/**/*",
    "src/**/*"
  ]
}

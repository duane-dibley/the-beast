{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "dist",
    "paths": {
      // "@/*":["src/*"]
      "@common/*": ["src/common/*"]
      
    },
    "sourceMap": true,
    // "strictNullChecks": true,
    // "strictPropertyInitialization": true,
    "target": "es6",
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "src/**/*",
    "webpack.config.dev.ts",
    "webpack.config.prod.ts",
    "webpack.config.ts"
  ]
}

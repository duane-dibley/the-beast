{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "dist",
    "paths": {
      "@components": ["src/common/components"],
      "@hoc": ["src/common/hoc"],
      "@routes": ["src/common/routes"],
      "@store": ["src/common/store"],
      "@styles": ["src/common/styles"]
    },
    "sourceMap": true,
    "target": "es6",
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "src/**/*",
    "webpack.config.dev.ts",
    "webpack.config.prod.ts",
    "webpack.config.ts"
  ]
}
